[Unit]
Description=Demography Backend
After=network.target

[Service]
User={{ USER }}
ExecStart={{ BASE_DIR }}/venv/bin/python3 manage.py gunicorn --host=0.0.0.0 --port={{ PORT }} --workers={{ WORKERS }}
WorkingDirectory={{ BASE_DIR }}
Restart=on-failure
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target